mixin appleTouchIcon(resolution)
  link(
    rel='apple-touch-icon'
    sizes='#{resolution}x#{resolution}'
    href='/icons/icon-#{resolution}x#{resolution}.png'
  )

link(rel='apple-touch-icon' href='/icons/icon-128x128.png')
each val in [72, 128, 144, 152, 192, 384, 512]
  +appleTouchIcon(val)
link(rel="apple-touch-startup-image" href="/icons/icon-512x512.png")
meta(name="apple-mobile-web-app-title" content="BestBrainGame")
// disable some browser UI fields like URL bar on IOS
meta(name="apple-mobile-web-app-capable" content="yes")
meta(name="apple-mobile-web-app-status-bar-style" content="#66f")